{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "final_space": true,
  "version": 3,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "session",
          "style": "plain",
          "foreground": "#8395f1",
          "template": "{{ .UserName }}"
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "#fd6d98",
          "template": " {{ .Path }} ",
          "properties": {
            "style": "agnoster_full"
          }
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "#74c4dd",
          "template": "<#3E859B>git:</>({{ .HEAD }}) ",
          "properties": {
            "branch_icon": ""
          }
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "#ffffff",
          "template": "\uf460"
        }
      ]
    }
  ]
}